package org.rumbledb.py4j;


import py4j.GatewayServer;
import org.rumbledb.api.Rumble;
import org.rumbledb.config.RumbleRuntimeConfiguration;

public class RumbleDBEntryPoint {
    private Rumble rumble;
    private RumbleRuntimeConfiguration configuration;

    public RumbleDBEntryPoint() {
        configuration = new RumbleRuntimeConfiguration();
        rumble = new Rumble(this.configuration);
    }

    public Rumble getRumbleSession(){
        return rumble;
    }

    public static void main(String[] args){
        GatewayServer gatewayServer = new GatewayServer(new RumbleDBEntryPoint());
        gatewayServer.start();
            System.err.println("RumbleDB py4j Server running. Press Control+C to stop.");
            System.err.println("RumbleDB is now running as a py4j server and accepts requests from Python.");
            System.err.println();
            System.err.println("What to do next?");
            System.err.println();
            System.err.println("from py4j.java_gateway import JavaGateway");
            System.err.println("gateway = JavaGateway()");
            System.err.println("rumble = gateway.entry_point.getRumbleSession()");
            System.err.println("rumble.runQuery('1+1')");
    }

}
